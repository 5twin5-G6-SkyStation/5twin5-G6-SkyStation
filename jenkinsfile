pipeline {
    agent any

    stages {
        stage('Checkout from Git') {
            steps {
                script {
                    checkout([$class: 'GitSCM', branches: [[name: '*/widedgharbi-5twin5-G6']],
                            userRemoteConfigs: [[url: 'https://github.com/5twin5-G6-SkyStation/5twin5-G6-SkyStation.git']]])
                }
            }
        }

        stage('Clean Project') {
            steps {
                script {
                    sh "mvn -B -DskipTests clean"
                }
            }
        }

        stage('SonarQube') {
            steps {
             		sh "mvn clean verify sonar:sonar -Dsonar.projectKey=station -Dsonar.projectName='station' -Dsonar.host.url=http://172.17.0.1:9000 -Dsonar.token=sqa_b8712c3d5f4bdd1d33b90799a87d1a12008aa52a"
            }
        }
    }
}
