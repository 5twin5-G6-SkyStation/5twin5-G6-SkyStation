pipeline {
    agent any

    stages {
        stage('Getting project from Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'widedgharbi-5twin5-G6']], userRemoteConfigs: [[url: 'https://github.com/5twin5-G6-SkyStation/5twin5-G6-SkyStation.git']]])
            }
        }

        stage('Maven Clean & Compile') {
            steps {
                sh 'mvn clean compile -B -DskipTests'
            }
        }

       stage('SonarQube Analysis') {
            steps{
             		sh "  mvn clean verify sonar:sonar -Dsonar.projectKey=station -Dsonar.projectName='station' -Dsonar.host.url=http://172.17.0.1:9000 -Dsonar.token=sqa_b09475c7acd32535e8b05799a5cddfc8281e37a8 "

            }
        }

       stage('Unit Tests') {
            steps{
               		 sh "mvn test "
            }
        }
    }
}
