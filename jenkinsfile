pipeline {
    agent any

    stages {
        stage('Getting project from Git') {
            steps {
                // Récupérer le code de votre projet depuis GitHub
                checkout([$class: 'GitSCM', branches: [[name: '*/widedgharbi-5twin5-G6']],
                        userRemoteConfigs: [[url: 'https://github.com/5twin5-G6-SkyStation/5twin5-G6-SkyStation.git']]])
            }
        }

        stage('Maven Clean and Compile') {
            steps {
                // Exécuter les commandes Maven clean et compile
                sh 'mvn clean compile'
            }
        }


         stage('Unit Tests') {
            steps{
               		 sh "mvn test "
            }
        }


        stage('Code Quality Check via SonarQube') {
            steps{

             		sh "  mvn clean verify sonar:sonar -Dsonar.projectKey=cicd -Dsonar.projectName='cicd' -Dsonar.host.url=http://172.10.0.140:9000 -Dsonar.token=sqa_88fa8b98142511d84c3edb264158a35d9dacbc65"

            }
        }


        stage('Publish to Nexus') {
            steps {


  sh 'mvn clean package deploy:deploy-file -DgroupId=tn.esprit.spring -DartifactId=gestion-station-ski -Dversion=1.0 -DgeneratePom=true -Dpackaging=jar -DrepositoryId=maven-releases -Durl=http://172.10.0.140:8081/repository/maven-releases/ -Dfile=target/gestion-station-ski-1.0.jar'


            }
        }
    }
}
