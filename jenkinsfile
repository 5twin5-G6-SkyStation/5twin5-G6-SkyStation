pipeline {
    agent any

    stages {
        stage('Checkout from Git') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/widedgharbi-5twin5-G6']],
                    userRemoteConfigs: [[url: 'https://github.com/5twin5-G6-SkyStation/5twin5-G6-SkyStation.git']]
                ])
            }
        }

        stage('Clean and Build') {
            steps {
                sh "mvn clean package -DskipTests"
            }
        }

        stage('Unit Tests') {
            steps {
                sh "mvn test"
            }
        }

        stage('Code Quality Check via SonarQube') {
            steps {
                sh "mvn verify sonar:sonar -Dsonar.projectKey=devops -Dsonar.projectName='devops' -Dsonar.host.url=http://172.17.0.1:9000 -Dsonar.login=sqa_7cb738af45c73d4903f550434b3c86c573b1b4f4"
            }
        }

}
}
