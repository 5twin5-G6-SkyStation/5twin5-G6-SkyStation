pipeline {
    agent any

    stages {
        stage('Getting project from Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/widedgharbi-5twin5-G6']],
                        userRemoteConfigs: [[url: 'https://github.com/5twin5-G6-SkyStation/5twin5-G6-SkyStation.git']]])
            }
        }

        stage('Maven Clean and Compile') {
            steps {
                // Configure the Maven cache
                script {
                    def mvnHome = tool name: 'Maven', type: 'hudson.tasks.Maven$MavenInstallation'
                    def mavenLocalRepo = "${env.WORKSPACE}/.repository"  // Define the local repository path

                    // Set the MAVEN_OPTS environment variable to use a custom local repository
                    env.MAVEN_OPTS = "-Dmaven.repo.local=${mavenLocalRepo}"

                    // Execute the Maven build
                    withMaven(maven: mvnHome, mavenLocalRepo: mavenLocalRepo) {
                        sh 'mvn clean compile'
                    }
                }
            }
        }
         stage('Code Quality Check via SonarQube') {
            steps{

             		sh "  mvn clean verify sonar:sonar -Dsonar.projectKey=station -Dsonar.projectName='station' -Dsonar.host.url=http://172.17.0.1:9000 -Dsonar.token=sqa_dab89acad417d09e3627b151e5c2844bbf3b9676 "

            }
        }
         stage('Unit Tests') {
            steps{
               		 sh "mvn test "
            }
        }
    }
}
