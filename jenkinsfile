pipeline {
    agent any

    stages {
        stage('Getting project from Git') {
            steps {
                script {
                    // Supprimez les crochets inutiles autour de 'widedgharbi-5twin5-G6'
                    checkout([$class: 'GitSCM', branches: [[name: 'widedgharbi-5twin5-G6'], userRemoteConfigs: [[url: 'https://github.com/5twin5-G6-SkyStation/5twin5-G6-SkyStation.git']]])
                }
            }
        }

        stage('Cleaning the project') {
            steps {
                sh 'mvn clean -B -DskipTests'
            }
        }

        stage('Maven Compile') {
            steps {
                sh 'mvn compile -B -DskipTests'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // Utilisez le nom d'utilisateur et le mot de passe corrects pour l'analyse SonarQube
                    withSonarQubeEnv('admin', 'sonar') {
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'mvn test'
            }
        }
    }
}
